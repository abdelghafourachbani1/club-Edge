<div class="container">
    <h1>Modifier l'article</h1>

    {% if session.error is defined %}
        <div class="error-message">{{ session.error }}</div>
    {% endif %}

    <form method="POST" action="/club-Edge/articles/{{ article.id }}/update">
        <label>Titre:</label>
        <input type="text" name="title" value="{{ article.title }}" required>

        <label>Contenu:</label>
        <textarea name="content" required>{{ article.content }}</textarea>

        <label>Images:</label>
        <textarea name="images">{{ article.images }}</textarea>

        <button type="submit" class="btn">Mettre Ã  jour</button>
    </form>
</div>
