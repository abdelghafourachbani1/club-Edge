{# Premium Dark Mode Event Detail Page #}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');
    
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, sans-serif;
        background: #0A0A0A;
        color: #FFFFFF;
    }
    
    /* Navigation */
    .nav {
        padding: 2rem;
        position: sticky;
        top: 0;
        background: rgba(10, 10, 10, 0.8);
        backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        z-index: 100;
    }
    
    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.8rem 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        color: #FFF;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .back-btn:hover {
        background: rgba(255, 107, 53, 0.1);
        border-color: rgba(255, 107, 53, 0.3);
        color: #FF6B35;
        transform: translateX(-4px);
    }
    
    /* Hero Section */
    .hero-section {
        position: relative;
        height: 60vh;
        min-height: 500px;
        overflow: hidden;
    }
    
    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.7);
    }
    
    .hero-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(255, 107, 53, 0.3) 0%, rgba(10, 10, 10, 0.9) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 8rem;
        filter: opacity(0.5);
    }
    
    .hero-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 4rem 2rem 3rem;
        background: linear-gradient(to top, rgba(10, 10, 10, 1) 0%, transparent 100%);
    }
    
    .hero-content {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .event-status-badge {
        display: inline-block;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1.5rem;
        backdrop-filter: blur(10px);
    }
    
    .status-active {
        background: rgba(255, 107, 53, 0.9);
        color: #FFF;
        box-shadow: 0 4px 20px rgba(255, 107, 53, 0.4);
    }
    
    .status-finished {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #888;
    }
    
    .hero-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 700;
        line-height: 1.2;
        letter-spacing: -0.02em;
        margin-bottom: 1rem;
    }
    
    /* Content Area */
    .content-area {
        max-width: 1200px;
        margin: -5rem auto 4rem;
        padding: 0 2rem;
        position: relative;
        z-index: 10;
    }
    
    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }
    
    .stat-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem;
        backdrop-filter: blur(20px);
        transition: all 0.3s;
    }
    
    .stat-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 107, 53, 0.3);
        transform: translateY(-4px);
    }
    
    .stat-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    
    .stat-label {
        font-size: 0.85rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #FFF;
    }
    
    /* Content Section */
    .section {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 3rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(20px);
    }
    
    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #FFF;
    }
    
    .description-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #AAA;
    }
    
    /* CTA Buttons */
    .cta-container {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        flex-wrap: wrap;
    }
    
    .btn {
        padding: 1.2rem 2.5rem;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #FF6B35 0%, #E55A2B 100%);
        color: #FFF;
        box-shadow: 0 8px 24px rgba(255, 107, 53, 0.4);
    }
    
    .btn-primary:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(255, 107, 53, 0.6);
    }
    
    .btn-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #FFF;
    }
    
    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
    }
    
    /* Participants */
    .participants-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1.5rem;
    }
    
    .participant-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem 1.5rem;
        text-align: center;
        transition: all 0.3s;
    }
    
    .participant-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 107, 53, 0.3);
        transform: translateY(-4px);
    }
    
    .participant-avatar {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #FF6B35, #E55A2B);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #FFF;
        font-weight: 700;
        font-size: 1.8rem;
        margin: 0 auto 1rem;
        border: 3px solid rgba(255, 107, 53, 0.2);
    }
    
    .participant-name {
        font-weight: 600;
        color: #FFF;
        margin-bottom: 0.5rem;
    }
    
    .attended-badge {
        display: inline-block;
        padding: 0.4rem 1rem;
        background: rgba(255, 107, 53, 0.2);
        border: 1px solid rgba(255, 107, 53, 0.3);
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        color: #FF6B35;
    }
</style>

<div class="nav">
    <a href="/club-Edge/events" class="back-btn">
        ‚Üê Back to Events
    </a>
</div>

<div class="hero-section">
    {% if event.images|length > 0 %}
        <img src="{{ event.images[0] }}" alt="{{ event.title }}" class="hero-image">
    {% else %}
        <div class="hero-placeholder">üìÖ</div>
    {% endif %}
    
    <div class="hero-overlay">
        <div class="hero-content">
            <span class="event-status-badge status-{{ event.status }}">
                {{ event.status }}
            </span>
            <h1 class="hero-title">{{ event.title }}</h1>
        </div>
    </div>
</div>

<div class="content-area">
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">üìÖ</div>
            <div class="stat-label">Date & Time</div>
            <div class="stat-value">{{ event.eventDate|date('M d, Y') }}<br><span style="font-size: 1rem; color: #888;">{{ event.eventDate|date('H:i') }}</span></div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">üìç</div>
            <div class="stat-label">Location</div>
            <div class="stat-value">{{ event.location }}</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">üë•</div>
            <div class="stat-label">Participants</div>
            <div class="stat-value">{{ participantCount }} joined</div>
        </div>
    </div>

    <div class="section">
        <h2 class="section-title">About This Event</h2>
        <p class="description-text">{{ event.description }}</p>

        {% if event.status == 'active' and event.isUpcoming %}
            <div class="cta-container">
                {% if isRegistered %}
                    <form action="/club-Edge/events/{{ event.id }}/unregister" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-secondary">
                            Unregister from Event
                        </button>
                    </form>
                {% else %}
                    <form action="/club-Edge/events/{{ event.id }}/register" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-primary">
                            Register Now ‚Üí
                        </button>
                    </form>
                {% endif %}
            </div>
        {% endif %}
    </div>

    {% if participantCount > 0 %}
        <div class="section">
            <h2 class="section-title">Participants ({{ participantCount }})</h2>
            <div class="participants-grid">
                {% for participant in participants|slice(0, 12) %}
                    <div class="participant-card">
                        <div class="participant-avatar">
                            {{ participant.first_name|slice(0, 1) }}{{ participant.last_name|slice(0, 1) }}
                        </div>
                        <div class="participant-name">
                            {{ participant.first_name }} {{ participant.last_name }}
                        </div>
                        {% if participant.has_participated %}
                            <span class="attended-badge">‚úì Attended</span>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            {% if participantCount > 12 %}
                <p style="text-align: center; margin-top: 2rem; color: #888; font-size: 1.1rem;">
                    And {{ participantCount - 12 }} more amazing people...
                </p>
            {% endif %}
        </div>
    {% endif %}
</div>