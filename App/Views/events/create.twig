{# Premium Dark Mode Create Event Form #}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');
    
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, sans-serif;
        background: #0A0A0A;
        color: #FFFFFF;
    }
    
    .nav {
        padding: 2rem;
        background: rgba(10, 10, 10, 0.8);
        backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.8rem 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        color: #FFF;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .back-btn:hover {
        background: rgba(255, 107, 53, 0.1);
        border-color: rgba(255, 107, 53, 0.3);
        color: #FF6B35;
        transform: translateX(-4px);
    }
    
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 4rem 2rem;
    }
    
    .form-header {
        text-align: center;
        margin-bottom: 4rem;
    }
    
    .form-badge {
        display: inline-block;
        padding: 0.6rem 1.5rem;
        background: rgba(255, 107, 53, 0.1);
        border: 1px solid rgba(255, 107, 53, 0.3);
        border-radius: 50px;
        color: #FF6B35;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1.5rem;
    }
    
    .form-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
    }
    
    .form-subtitle {
        color: #888;
        font-size: 1.2rem;
    }
    
    .form-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 3rem;
        backdrop-filter: blur(20px);
    }
    
    .alert {
        padding: 1.2rem 1.5rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        background: rgba(255, 107, 53, 0.1);
        border: 1px solid rgba(255, 107, 53, 0.3);
        color: #FF6B35;
    }
    
    .alert ul {
        list-style: none;
        margin: 0;
    }
    
    .alert li {
        padding: 0.3rem 0;
    }
    
    .form-group {
        margin-bottom: 2.5rem;
    }
    
    .form-label {
        display: block;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #FFF;
        font-size: 1rem;
    }
    
    .required {
        color: #FF6B35;
        margin-left: 0.3rem;
    }
    
    .form-input,
    .form-textarea,
    .form-select {
        width: 100%;
        padding: 1.2rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #FFF;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.3s;
    }
    
    .form-input::placeholder,
    .form-textarea::placeholder {
        color: #666;
    }
    
    .form-input:focus,
    .form-textarea:focus,
    .form-select:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 107, 53, 0.5);
        box-shadow: 0 0 0 4px rgba(255, 107, 53, 0.1);
    }
    
    .form-textarea {
        resize: vertical;
        min-height: 180px;
        line-height: 1.6;
    }
    
    .form-hint {
        display: block;
        margin-top: 0.8rem;
        color: #888;
        font-size: 0.9rem;
    }
    
    .file-upload-area {
        border: 2px dashed rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        padding: 3rem 2rem;
        text-align: center;
        background: rgba(255, 255, 255, 0.02);
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }
    
    .file-upload-area:hover {
        border-color: rgba(255, 107, 53, 0.5);
        background: rgba(255, 107, 53, 0.05);
    }
    
    .file-upload-area input[type="file"] {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        cursor: pointer;
    }
    
    .upload-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        filter: grayscale(0.5);
    }
    
    .upload-text {
        color: #AAA;
        font-size: 1.1rem;
        font-weight: 600;
    }
    
    .upload-subtext {
        color: #666;
        font-size: 0.9rem;
        margin-top: 0.5rem;
    }
    
    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 3rem;
    }
    
    .btn {
        flex: 1;
        padding: 1.4rem 2rem;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #FF6B35 0%, #E55A2B 100%);
        color: #FFF;
        box-shadow: 0 8px 24px rgba(255, 107, 53, 0.4);
    }
    
    .btn-primary:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(255, 107, 53, 0.6);
    }
    
    .btn-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #FFF;
    }
    
    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
    }
</style>

<div class="nav">
    <a href="/club-Edge/events" class="back-btn">
        ‚Üê Back to Events
    </a>
</div>

<div class="container">
    <div class="form-header">
        <div class="form-badge">‚ú® Create Event</div>
        <h1 class="form-title">Create New Event</h1>
        <p class="form-subtitle">Design an unforgettable experience for your community</p>
    </div>

    <div class="form-card">
        {% if session.errors is defined %}
            <div class="alert">
                <ul>
                    {% for error in session.errors %}
                        <li>‚ö†Ô∏è {{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <form action="/club-Edge/events/store" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="form-label">
                    Event Title<span class="required">*</span>
                </label>
                <input 
                    type="text" 
                    id="title" 
                    name="title" 
                    class="form-input"
                    required
                    placeholder="e.g. Tech Innovation Summit 2026"
                    value="{{ session.old_input.title ?? '' }}"
                >
            </div>

            <div class="form-group">
                <label for="description" class="form-label">
                    Description<span class="required">*</span>
                </label>
                <textarea 
                    id="description" 
                    name="description" 
                    class="form-textarea"
                    required
                    placeholder="Share what makes your event special. What will participants learn or experience?"
                >{{ session.old_input.description ?? '' }}</textarea>
            </div>

            <div class="form-group">
                <label for="event_date" class="form-label">
                    Event Date & Time<span class="required">*</span>
                </label>
                <input 
                    type="datetime-local" 
                    id="event_date" 
                    name="event_date" 
                    class="form-input"
                    required
                    value="{{ session.old_input.event_date ?? '' }}"
                >
                <span class="form-hint">üóìÔ∏è Event must be scheduled for a future date</span>
            </div>

            <div class="form-group">
                <label for="location" class="form-label">
                    Location<span class="required">*</span>
                </label>
                <input 
                    type="text" 
                    id="location" 
                    name="location" 
                    class="form-input"
                    required
                    placeholder="e.g. Main Auditorium, Building A"
                    value="{{ session.old_input.location ?? '' }}"
                >
            </div>

            <div class="form-group">
                <label for="club_id" class="form-label">
                    Club<span class="required">*</span>
                </label>
                <select 
                    id="club_id" 
                    name="club_id" 
                    class="form-select"
                    required
                >
                    <option value="">Select your club</option>
                    <option value="1">Tech Club</option>
                    <option value="2">Art Club</option>
                    <option value="3">Sports Club</option>
                </select>
                <span class="form-hint">üè¢ You can only create events for clubs you preside</span>
            </div>

            <div class="form-group">
                <label class="form-label">Event Images (Optional)</label>
                <label class="file-upload-area">
                    <input 
                        type="file" 
                        id="images" 
                        name="images[]" 
                        multiple
                        accept="image/*"
                    >
                    <div class="upload-icon">üì∏</div>
                    <div class="upload-text">Drop images here or click to browse</div>
                    <div class="upload-subtext">JPG, PNG, GIF, WebP - Max 5MB each</div>
                </label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    Create Event ‚Üí
                </button>
                <a href="/club-Edge/events" class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>